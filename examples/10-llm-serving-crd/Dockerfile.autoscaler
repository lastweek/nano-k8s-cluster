FROM golang:1.22-alpine AS builder
WORKDIR /src

COPY go.mod go.sum ./
RUN go mod download

COPY operator-autoscaler.go ./
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -trimpath -ldflags="-s -w" -o /out/llmcluster-autoscaler ./operator-autoscaler.go

FROM gcr.io/distroless/static:nonroot
COPY --from=builder /out/llmcluster-autoscaler /llmcluster-autoscaler
USER nonroot:nonroot
ENTRYPOINT ["/llmcluster-autoscaler"]
